@using Cinema.Controllers
@model Cinema.Models.Domain.Movie[]


@section SubNav
{
	@Html.Partial("SubNavigation")
}


<style>
	table td {
		border-bottom: 1px solid black;
		padding: 0px 10px; /* Поля вокруг содержимого ячеек */
	}
	table{
		border: 2px solid #333;
		border-collapse: separate;
		width: 100%;
		border-spacing: 0 20px;
	}
</style>

<h2>DisplayMoviesList</h2>

<table >
	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Description</th>
		<th>Poster</th>
		<th>Action</th>
	</tr>
	@foreach (var movie in Model)
	{
		//Action потом будет ссылка на едактирование
		<tr>
			<td>@movie.Id</td>
			<td>@movie.Title</td>
			<td>@movie.Description</td>
			<td>
				<img src="@movie.ImageUrl" height="200px" alt="Alternate Text"/>
			</td>
			<td>@Html.ActionLink("Edit",nameof(AdminController.EditMovie), "Admin",new {id = @movie.Id},null)</td>
			<td>@Html.ActionLink("Edit TimeSlots", nameof(AdminController.EditTimeSlotsForMoview), "Admin", new {id = @movie.Id},null)</td>
		</tr>
	}
	
</table>

